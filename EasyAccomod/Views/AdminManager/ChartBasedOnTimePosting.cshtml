

<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<button id="update-btn" class="btn btn-primary my-2 mx-3"> Cập nhật</button><span>Cập nhật lúc: </span><span id="update-time">12:41 26/12/20</span>
<div id="chart-container" class="container rounded border py-4 m-3" style="width:500px; height:500px;">
    <canvas id="myChart" width="80" height="80"></canvas>
</div>

<script>
    
    var ctx = document.getElementById("myChart");
    /// số liệu ban đầu
    var dataInit = [120, 190, 30, 50, 20, 30, 200, 30, 50, 60, 20, 10];
    ///
    var chart = {
        type: 'bar',
        data: {
            labels: ["0h-2h", "2h-4h", "4h-6h", "6h-8h", "8h-10h", "10h-12h", "12h-14h", "14h-16h", "16h-18h", "18h-20h", "20h-22h", "22h-0h"],
            datasets: [{
                label: 'Thống kê lượt đăng bài theo khung giờ tuần gần nhất',
                data: dataInit,
                backgroundColor: [
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(54, 162, 235, 0.2)'
                ],
                borderColor: [
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(54, 162, 235, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                xAxes: [{

                    gridLines: {
                        offsetGridLines: true // à rajouter
                    }
                }],
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    };
    
    var myChart = new Chart(ctx, chart);

    // thay đổi số liệu
    function updateData() {
        myChart.data.datasets[0].data[0] = 150;
        myChart.update();
        var today = new Date().toLocaleString();
        $("#update-time").html("" + today);
    }

    $("#update-btn").click(updateData);
   
</script>
