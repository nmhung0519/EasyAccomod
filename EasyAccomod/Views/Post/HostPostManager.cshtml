@{ 
    ViewBag.Title = "Quản lý bài đăng";
}
<link href="~/Content/AdminPostManager.css" rel="stylesheet" />
<div class="admin-page-container container rounded border mx-auto row" style="margin-top: 50px; margin-bottom: 50px;">

    <div class="col-3 web-sidebar" style="position: relative; border-right: 1px solid #eee;">
        <div class="sticky-sidebar">
            <div class="sidebar-header">
                <h3>Quản lý </h3>
            </div>
            <nav id="sidebar">

                <ul class="list-unstyled components">

                    <li class="nav-item-big">
                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Bài viết</a>
                        <ul class="collapse list-unstyled nav nav-pills flex-column" id="homeSubmenu">
                            <li class="nav-item">
                                <a id="approve-account" class="nav-link" data-toggle="pill" href="#">Bài đăng đang chờ duyệt<span class="badge badge-danger">101</span></a>
                            </li>
                            <li class="nav-item">
                                <a id="approve-post" class="nav-link" data-toggle="pill" href="#">Bài đăng đang hiển thị<span class="badge badge-danger">101</span></a>
                            </li>
                            <li class="nav-item">
                                <a id="approve-purchase" class="nav-link" data-toggle="pill" href="#">Bài đăng đã ẩn<span class="badge badge-danger">101</span></a>
                            </li>
                            <li class="nav-item">
                                <a id="approve-comment" class="nav-link" data-toggle="pill" href="#">Bài đăng bị từ chối<span class="badge badge-danger">101</span></a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item-big">
                        <a href="#pageSubmenu">Thanh toán</a>
                    <li class="nav-item-big">
                        <a href="#" id="messages">Tin nhắn</a>
                    </li>
                    <li class="nav-item-big">
                        <a href="#">Báo cáo vi phạm</a>
                    </li>


                </ul>
            </nav>
        </div>
    </div>
    <div class="content col-9" id="content-container">

    </div>

</div>
<script>



    $(".nav-item-big").click(function () {
        if ($(this).attr("aria-expanded", "true")) {
            $(this).find("a").removeClass("active");
        }
        $(this).siblings().find("a").attr("aria-expanded", "false");
        $(this).siblings().find("ul").removeClass("show");
        if (!$(this).hasClass("active")) {
            $(this).addClass("active");
            $(this).siblings().removeClass("active");
        }
    });


    $("#messages").click(function () {
        $("#content-container").load("post-list.html");
    });


    $("#approve-account").click(function () {
        $("#content-container").load("approve-account.html");
    });

    $("#approve-post").click(function () {
        $("#content-container").load("approve-post.html");
    });

    $("#approve-purchase").click(function () {
        $("#content-container").load("approve-purchase.html");
    });

    $("#approve-comment").click(function () {
        $("#content-container").load("approve-comment.html");
    })
</script>