@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EasyAccomod.Models.AdvancedSearchModel
    
       
        <div class="form-container container mx-auto  bg-light px-1  px-lg-2 py-3 rounded border my-3">
            <div id="header" class="container" style="display: contents">
                <h4 class="font-weight-bold text-center">Tìm kiếm nâng cao</h4>
                <div id="login-form-container" class="container py-3">
                    @using (Html.BeginForm("AdvancedSearch", "Home", FormMethod.Post))
                    {
                    <div class="form-group row">
                        <div class="col-12 col-md-4">
                            @Html.LabelFor(m => m.CityId)
                            @Html.DropDownListFor(m => m.CityId, new List<SelectListItem> { new SelectListItem { Text = "Chọn Tỉnh/Thành phố", Value = "0" } }, new { @class = "form-control city-filter" })
                        </div>
                        <div class="col-12 col-md-4">
                            @Html.LabelFor(m => m.DistrictId)
                            @Html.DropDownListFor(m => m.DistrictId, new List<SelectListItem> { new SelectListItem { Text = "Chọn Quận/Huyện", Value = "0" } }, new { @class = "form-control district-filter", @disabled = "disable" })
                        </div>

                        <div class="col-12 col-md-4">
                            @Html.LabelFor(m => m.WardId)
                            @Html.DropDownListFor(m => m.WardId, new List<SelectListItem> { new SelectListItem { Text = "Chọn Xã/Phường", Value = "0" } }, new { @class = "form-control ward-filter", @disabled = "disable" })

                        </div>


                    </div>
                        
                    <div class="form-group row">
                        <div class="col-12 col-lg-4">
                            @Html.LabelFor(m => m.Type, new { @style = "white-space: nowrap" })
                            @Html.DropDownListFor(m => m.Type, Model.GetListType(), new { @class = "form-control" })
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="price-base">Giá tính theo</label>
                            <select id="price-base" name="price-base" class="form-control">
                                <option>Tháng</option>
                                <option>Quý</option>
                                <option>Năm</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12 col-lg-6">
                            <label for="area" style="white-space: nowrap;">Giá từ</label>

                            @Html.TextBoxFor(m => m.FromPrice, new { @class = "form-control", @type = "number" })
                            <span>đến</span>
                            @Html.TextBoxFor(m => m.ToPrice, new { @class = "form-control", @type = "number" })
                        </div>
                        <div class="col-12 col-lg-6">
                            <label for="area" style="white-space: nowrap;">Diện tích từ(m2)</label>

                            @Html.TextBoxFor(m => m.FromArea, new { @class = "form-control", @type = "number" })
                            <span>đến(m2)</span>
                            @Html.TextBoxFor(m => m.ToArea, new { @class = "form-control", @type = "number" })
                        </div>
                    </div>


                        <h6>Điều kiện, cơ sở vật chất:</h6>

                        <div class="form-group row">
                            <div class="col-12 col-sm-4">
                                @Html.CheckBoxFor(m => m.AirConditioner)
                                @Html.LabelFor(m => m.AirConditioner, new { @style = "white-space: nowrap" })

                            </div>
                            <div class="col-12 col-sm-4">
                                @Html.CheckBoxFor(m => m.WaterHeater)
                                @Html.LabelFor(m => m.WaterHeater, new { @style = "white-space: nowrap" })

                            </div>
                            <div class="col-12 col-sm-4">
                                @Html.CheckBoxFor(m => m.PrivateKitchen)
                                @Html.LabelFor(m => m.PrivateKitchen, new { @style = "white-space: nowrap" })
                            </div>
                            <div class="col-6 col-sm-4">
                                @Html.CheckBoxFor(m => m.Balcony)
                                @Html.LabelFor(m => m.Balcony, new { @style = "white-space: nowrap" })
                            </div>
                            <div class="col-12 col-sm-4">
                                @Html.CheckBoxFor(m => m.ClosedRoom)
                                @Html.LabelFor(m => m.ClosedRoom, new { @style = "white-space: nowrap" })

                            </div>
                            <div class="col-12 col-sm-4">
                                @Html.CheckBoxFor(m => m.WithoutHost)
                                @Html.LabelFor(m => m.WithoutHost, new { @style = "white-space: nowrap" })

                            </div>
                        </div>
                        <div class="container text-center">
                            <button class="btn btn-primary">Tìm kiếm</button>
                        </div>
                    }

                </div>
            </div>
        </div>

   
    <script src="~/Scripts/address.control.js"></script>


